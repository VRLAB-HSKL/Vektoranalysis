<log4net>

	<appender name="consoleAppender" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<!-- Print the data in ISO 8601 -->
			<conversionPattern value="%date [%thread] %-5level %logger %ndc - %message%newline" />
		</layout>
	</appender>
	
	<appender name="unityAppender" type="UnityAppender" >
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="[%date{dd.MM.yyyy HH:mm:ss fff}][%timestamp] %-5level %logger{1}:%method:%line - %message%newline" />
		</layout>
	</appender>
	
	<root>
		<level value="DEBUG" />
		
		<appender-ref ref="consoleAppender" />
		<!-- <appender-ref ref="rollingFileAppender" /> -->
		<appender-ref ref="unityAppender" />
	</root>

</log4net>